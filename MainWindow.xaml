<Window x:Class="L2_Calc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NPC Explorer" Height="800" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="8">
            <TextBlock VerticalAlignment="Center" Text="Min Level:"/>
            <TextBox x:Name="MinLevelBox" Width="60" Margin="6,0" />
            <TextBlock VerticalAlignment="Center" Text="Max Level:"/>
            <TextBox x:Name="MaxLevelBox" Width="60" Margin="6,0" />
            <Button x:Name="ReloadBtn" Content="Reload" Click="ReloadBtn_Click" Margin="8,0" />
            <TextBlock x:Name="StatusText" Margin="10,0" VerticalAlignment="Center" />
        </StackPanel>

        <DataGrid x:Name="NpcGrid" Grid.Row="1" Margin="8" AutoGenerateColumns="False"
                  ItemsSource="{Binding Npcs}"
                  IsReadOnly="True" CanUserSortColumns="True" RowDetailsVisibilityMode="VisibleWhenSelected"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" SortMemberPath="Id" />
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" SortMemberPath="Name" />
                <DataGridTextColumn Header="Level" Binding="{Binding Level}" SortMemberPath="Level" />
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" SortMemberPath="Type" />
                <DataGridTextColumn Header="TotalValue" Binding="{Binding TotalValue, StringFormat=N2}" SortMemberPath="TotalValue" />
                <DataGridTextColumn Header="TotalSpoil" Binding="{Binding TotalSpoil, StringFormat=N2}" SortMemberPath="TotalSpoil" />
                <DataGridTextColumn Header="TotalWealth" Binding="{Binding TotalWealth, StringFormat=N2}" SortMemberPath="TotalWealth" />
            </DataGrid.Columns>

            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="8">
                            <TextBlock FontWeight="Bold" Text="Drops:" />
                            <ItemsControl ItemsSource="{Binding DropLists.Drop}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="4" Background="#FFF2F2F2">
                                            <StackPanel Margin="6">
                                                <TextBlock Text="Group" FontWeight="Bold" />
                                                <TextBlock Text="{Binding Chance, StringFormat=Chance: {0}}" />
                                            <ItemsControl ItemsSource="{Binding Items}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Width="60" Text="{Binding Id, StringFormat=Id: {0}}" />
                                                            <TextBlock Width="300" Text="{Binding Name, StringFormat=Name: {0}}" />
                                                            <TextBlock Width="120" Text="{Binding Chance, StringFormat=Chance: {0}}" />
                                                            <TextBlock Width="120" Text="{Binding Min, StringFormat=Min: {0}}" />
                                                            <TextBlock Width="120" Text="{Binding Max, StringFormat=Max: {0}}" />
                                                            <TextBlock Width="120" Text="{Binding Value, StringFormat=Value: {0:N2}}" />
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <TextBlock FontWeight="Bold" Margin="8,6,0,0" Text="Spoil:" />
                            <ItemsControl ItemsSource="{Binding DropLists.Spoil.Items}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Width="60" Text="{Binding Id, StringFormat=Id: {0}}" />
                                            <TextBlock Width="300" Text="{Binding Name, StringFormat=Name: {0}}" />
                                            <TextBlock Width="120" Text="{Binding Chance, StringFormat=Chance: {0}}" />
                                            <TextBlock Width="120" Text="{Binding Min, StringFormat=Min: {0}}" />
                                            <TextBlock Width="120" Text="{Binding Max, StringFormat=Max: {0}}" />
                                            <TextBlock Width="120" Text="{Binding Value, StringFormat=Value: {0:N2}}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>

        <TextBlock Grid.Row="2" Margin="8" HorizontalAlignment="Left" x:Name="FooterText" />
    </Grid>
</Window>
